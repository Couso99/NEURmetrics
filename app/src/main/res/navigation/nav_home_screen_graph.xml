<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_home_screen_graph"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/hostFragment"
        android:name="com.imovil.recordapp.HostFragment"
        android:label="HostFragment" >
        <action
            android:id="@+id/action_hostFragment_to_selectUserFragment"
            app:destination="@id/selectUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectUserFragment"
        android:name="com.imovil.recordapp.SelectUserFragment"
        android:label="SelectUserFragment" >
        <action
            android:id="@+id/action_selectUserFragment_to_selectTrialFragment"
            app:destination="@id/selectTrialFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectTrialFragment"
        android:name="com.imovil.recordapp.SelectTrialFragment"
        android:label="SelectTrialFragment" />
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.imovil.recordapp.HomeScreenFragment"
        android:label="HomeScreenFragment" >
        <action
            android:id="@+id/action_homeScreenFragment_to_hostFragment"
            app:destination="@id/hostFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.imovil.recordapp.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>